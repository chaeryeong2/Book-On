<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:fillViewport="true"
    tools:context=".ui.ReviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="하이라이트 기록하기 ✍️"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="300dp"
            app:cardBackgroundColor="#F0F2F5"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_highlight_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_add_photo"
                app:tint="#A0B2BEC3"
                android:padding="80dp"
                android:clickable="true"
                android:focusable="true"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            android:text="인상 깊은 문장을 사진으로 남겨보세요."
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="어떤 책을 읽고 계신가요?"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_book_select"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_input_box"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            tools:listitem="@android:layout/simple_spinner_item" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="감상평 / 메모"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_box"
            android:gravity="top"
            android:hint="이 부분에 대한 생각이나 느낌을 자유롭게 적어주세요."
            android:inputType="textMultiLine"
            android:minLines="4"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="페이지 (선택)"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_page_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/bg_input_box"
                    android:hint="예: 123"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="공개 설정"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_visibility"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <RadioButton
                        android:id="@+id/rb_public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체 공개"
                        android:checked="true"
                        android:buttonTint="@color/brand_secondary"
                        android:textColor="@color/text_primary"
                        android:layout_marginEnd="16dp"/>

                    <RadioButton
                        android:id="@+id/rb_private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나만 보기"
                        android:buttonTint="@color/brand_secondary"
                        android:textColor="@color/text_primary"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/brand_primary"
            android:text="기록 업로드"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>